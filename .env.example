# FLOCORE AI v4.16 - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ================================
# EXISTING CONFIGURATION
# ================================

# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# WHATSAPP BUSINESS API INTEGRATION
# ================================

# Meta Developer App Credentials
WHATSAPP_APP_ID=your_meta_app_id
WHATSAPP_APP_SECRET=your_meta_app_secret

# WhatsApp Business Account Configuration
WHATSAPP_ACCESS_TOKEN=your_system_user_access_token
WHATSAPP_PHONE_NUMBER_ID=your_business_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_waba_id

# Webhook Configuration
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_verification_token
WHATSAPP_WEBHOOK_URL=https://yourdomain.com/webhooks/whatsapp

# ================================
# GOOGLE WORKSPACE INTEGRATION
# ================================

# Google Cloud Project OAuth2 Configuration
GOOGLE_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_oauth_client_secret
GOOGLE_PROJECT_ID=your_google_cloud_project_id

# OAuth2 Redirect Configuration (optional - defaults to current domain + /oauth-callback.html)
GOOGLE_REDIRECT_URI=https://yourdomain.com/oauth-callback.html

# ================================
# DATABASE & SECURITY (Optional)
# ================================

# Database Connection (for production deployments)
DATABASE_URL=your_database_connection_string

# JWT Secret for token management (recommended for production)
JWT_SECRET=your_jwt_signing_secret

# Data Encryption Key (for sensitive data storage)
ENCRYPTION_KEY=your_32_character_encryption_key

# ================================
# WEBHOOK INFRASTRUCTURE
# ================================

# Your domain for webhook endpoints (must be HTTPS in production)
WEBHOOK_BASE_URL=https://yourdomain.com

# Webhook security tokens
WEBHOOK_SECRET=your_webhook_security_secret

# ================================
# INTEGRATION SETTINGS
# ================================

# Rate limiting and performance settings
API_RATE_LIMIT_PER_MINUTE=100
CACHE_TTL_SECONDS=300
HEALTH_CHECK_INTERVAL_SECONDS=300

# Feature flags for gradual rollout
FEATURE_WHATSAPP_INTEGRATION=true
FEATURE_GOOGLE_WORKSPACE_INTEGRATION=true
FEATURE_CONVERSATIONAL_ANALYSIS=true
FEATURE_REAL_TIME_WEBHOOKS=true

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Development mode (set to 'false' for production)
NODE_ENV=development

# Debug logging levels
DEBUG_INTEGRATIONS=true
DEBUG_WEBHOOKS=true
DEBUG_API_CALLS=false

# Mock services for development (when APIs not available)
USE_MOCK_WHATSAPP=false
USE_MOCK_GOOGLE=false